---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact ABC Shoes">
  <main class="relative overflow-hidden">
    <div class="relative mx-auto px-8 max-w-7xl py-24 md:px-12">
      <h1 class="text-negroni-500 font-bold md:text-6xl text-3xl tracking-tight mb-8">
        Contact Us
      </h1>
      <div class="text-white space-y-6">
        <p>We'd love to hear from you! Get in touch with us through any of the following channels:</p>
        <ul class="list-disc list-inside">
          <li>Email: info@abcshoes.com</li>
          <li>Phone: +1 (555) 123-4567</li>
          <li>Address: 123 Fashion Street, Style City, SC 12345, USA</li>
        </ul>
        <div class="mt-8">
          <h2 class="text-negroni-500 text-2xl font-semibold mb-4">Follow Us</h2>
          <div class="flex space-x-4">
            <a href="#" class="text-white hover:text-negroni-500">Facebook</a>
            <a href="#" class="text-white hover:text-negroni-500">Instagram</a>
            <a href="#" class="text-white hover:text-negroni-500">Twitter</a>
            <a href="#" class="text-white hover:text-negroni-500">LinkedIn</a>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
